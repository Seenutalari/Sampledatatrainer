@model sampleadmin.Models.customer
@using sampleadmin.Models
@{
    ViewBag.Title = "Login";
}
@if (TempData["Message"] != null)
            {<center>
                <div class="alert alert-success">
                    @TempData["Message"]
                </div></center>
            }

<html>
<head>
    <title></title>
    <style>
        body {
            
            background-image: url('../../images/clo.jpg');
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }
</style>
</head>
<body style="font-family:'Times New Roman'">
    <center>


        @if (TempData["LoginMessage"] != null)
        {
            <div class="alert-success">@TempData["LoginMessage"]</div>
        }

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            <table style="width: 500px; height: 350px; font-size:larger">

                <th colspan="2" align="center"><center><h1>Sign In</h1></center></th>

                <tr>
                    <td align="center">Username</td>
                    <td align="center">
                        @Html.TextBoxFor(m => m.username, new { @required = "Enter username" })
                    </td>
                </tr>

                <tr>
                    <td style="height: 72px" align="center">Password</td>
                    <td style="height: 72px" align="center">
                        @Html.PasswordFor(m => m.password, new { @required = "Enter Password" })

                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <input type="submit" value="Login" name="Login" class="btn btnOrder" style="font-size: large; background-color: #F4BD61" />

                    </td>
                </tr>


            </table>

        }
        <center>
            <div style="font-size:larger">
              
                Dont have an account?<br />
                @Html.ActionLink("Create an account", "Signup")
            </div>
        </center>
    </center>
</body>
</html>